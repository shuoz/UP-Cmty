<table>
	<tr>
		<td><div class = "field">Comment</td></div>
		<td><div class = "field">Time</td></div>
		<td><div class = "field">User</td></div>
		<td><div class = "field">Event</td></div>
	</tr>
	<% @comments.each do |comment| %>
	<tr>
		<td><%= link_to comment.content, comment_path(comment.id) %></td>
		<td><%= comment.updated_at %></td>
		<td><%= comment.user.name unless comment.user.nil? %></td>
		<td><%= comment.event.title unless comment.event.nil? %></td>
		<% if comment.user_id == current_user.id %>
			<td><%= link_to "Edit Comment", edit_comment_path(comment.id) %></td>
			<td><%= button_to "Delete Comment", comment, confirm: "Are you sure you want to delete?", method: :delete %></td>
		<% end %>
	</tr>
	<% end %>
</table>
