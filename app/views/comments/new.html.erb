<%= form_for(@comment) do |f| %>
	<div class = "field">
		Comment:<br />
		<%= f.text_field :content %>
	</div>
	<p></p>
	<div class = "field">
		<%= f.hidden_field :user_id, :value => current_user.id %>
	</div>
	<div class = "field">
		Event:<br />
		<%= f.collection_select :event_id, Event.all, :id, :title %>
	</div>
	<p></p>
	<div class = "button">
		<%= f.submit %>
	</div>
	<div class="error-msg">
		<% if @comment.errors.any? %>
		<ul>
			<% @comment.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
		<% end %>
	</div>
<% end %>
