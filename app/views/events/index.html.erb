<div id = "calendar"></div>

<table>
	<tr>
		<td><div class = "field">Event ID</td></div>
		<td><div class = "field">Title</td></div>
		<td><div class = "field">Category</td></div>
		<td><div class = "field">Location</td></div>
		<td><div class = "field">Start Time</td></div>
		<td><div class = "field">End Time</td></div>
		<td><div class = "field">Maximum Attendees</td></div>
		<td><div class = "field">Host</td></div>
	</tr>
	<% @events.each do |event| %>
	<tr>
		<td><%= event.id %></td>
		<td><%= link_to event.title, event_path(event.id) %></td>
		<td><%= event.category %></td>
		<td><%= event.location %></td>
		<td><%= event.dayandtime %></td>
		<td><%= event.dayandtimeend %></td>
		<td><%= event.maxpeople %></td>
		<td><%= event.user.name %></td>
		<% if event.user_id == current_user.id %>
			<td><%= link_to "Edit Event", edit_event_path(event.id) %></td>
			<td><%= button_to "Delete Event", event, confirm: "Are you sure you want to delete?", method: :delete %></td>
		<% end %>
	</tr>
	<% end %>
	
	<% if false %>
	<tr>
		<td>Event</td>
		<td>Participant</td>
	</tr>
		<% @participants.each do |participant| %>
		<tr>
			<td><%= participant.event.title %></td>
			<td><%= participant.user.name %></td>
			<% if participant.user_id == current_user.id %>
			<td><%= button_to "Don't Attend", participant, confirm: "you sure you want to unattend this event?", method: :delete %></td>
			<% end %>
		</tr>
		<% end %>
	<% end %>

</table>
